+		case notify.InMovedTo:
+			info.To = ei.Path()
+		}
+		moves[cookie] = info
+
+		if cookie != 0 && info.From != "" && info.To != "" {
+			log.Println("File:", info.From, "was renamed to", info.To)
+			delete(moves, cookie)
+		}
+	}
